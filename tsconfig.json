{
  "extends": "./tsconfig.path.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./"
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
